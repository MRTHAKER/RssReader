<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    tools:context=".readstory">

    <ImageView
        android:paddingTop="10dp"
        android:id="@+id/readimg"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:fadingEdge="none"
        android:paddingHorizontal="5dp" />

    <TextView
        android:id="@+id/story"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_below="@+id/readimg"
        android:paddingHorizontal="5dp"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:backgroundTint="@color/colorPrimary"
        tools:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_weight="1.0"
        android:ems="10"
        android:fillViewport="true"
        android:letterSpacing="0.0"
        android:breakStrategy="balanced"
        android:lineSpacingExtra="10dp"
        android:maxLines="100"
        android:nestedScrollingEnabled="true"
        android:paddingHorizontal="5dp"
        android:scrollbars="vertical"
        android:shadowDx="4"
        android:shadowDy="4"
        android:layout_gravity="center_vertical|left|right"
        android:shadowRadius="10"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@color/colorTransparentWhite"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:backgroundTint="@color/colorPrimary" />

</LinearLayout>



